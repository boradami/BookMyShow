
<table class="table">
  <thead>
    <th>Name</th>
    <th>Address</th>
  </thead>
  <tbody>
    <% @cinemas.each do |cinema| %>
      <tr>
        <td><%= link_to movies_path(cinema_id: cinema.id) do %>
          <%= cinema.name %> 
          <% end %>
        </td>
        <td><%= cinema.address %></td>
      </tr>
    <% end %>
  </tbody>
</table><br><br>

<h3><%= link_to "New Cinema", new_cinema_path %></h3>