
<h1>Movies</h1>
<table>
  <thead>
    <th>Name</th>
    <th>Language</th>
    <th>Movie Type</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie_path(movie) do %>
            <%=  movie.name %>
            <% end %>
        </td>
        <td><%= movie.language %></td>
        <td><%= movie.movie_type %></td>
        <td>
          <%= link_to "Edit", edit_movie_path(movie)%>|
          <%= link_to "Delete", movie_path(movie), method: :delete, data: {confirm: "Are you sure..?"}%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table><br><br>

<h3>
 <%= link_to "New Movie", new_movie_path %>
</h3>
