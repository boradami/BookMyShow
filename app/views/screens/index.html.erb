
<h1> Screens </h1>
<table class="table">
  <thead>
    <th>Screen Name</th>
    <th>Total Seats</th>
    <th>Cinema Name</th>
    <% if admin_signed_in? %>
      <th>Action </th>
    <% end %>
  </thead>
  <tbody>
    <% @screens.each do |screen| %>
      <tr>
        <td><%= link_to screen_path(screen) do %>
            <%=  screen.screen_name %>
            <% end %>
        </td>
        <td><%= screen.total_seats %></td>
        <td><%= screen.cinema.name %></td>
        <% if admin_signed_in? %>
          <td><%= link_to "Edit", edit_screen_path(screen) %></td>
          <td><%= link_to "Delete", screen_path(screen), method: :delete, data: { confirm: "Are you sure..?"}%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table><br><br>
<% if admin_signed_in? %>
  <h3><%= link_to "New Screen", new_screen_path%></h3>
<% end %>